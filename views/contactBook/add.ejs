<%- include ('../partials/navbar.ejs') %>

    <main style="margin-bottom: 10%;">

        <div style="margin: auto; padding: auto;">

            <div>
                <section class="wrapper-full tab-container effectTab-header" id="style_3">
                    <div class="wrapper tab-item">
                        <div class="custom-row">
                            <div class="wrapper " align="center">
                                <h1 class="ti title">Add New Contact</h1>
                            </div>
                        </div>
                    </div>
                </section>
            </div>


            <form class="form" method="POST" style="margin:auto; padding: 5%;">

                <div class="form-group">
                    <label for=contactName class="col-sm-2 col-form-label">Name</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name=contactName id=contactName
                            placeholder="Your Full Name" required>
                    </div>
                </div>

                <div class="form-group">
                    <label for=contactEmail class="col-sm-2 col-form-label">Email</label>
                    <div class="col-sm-10">
                        <input type="email" class="form-control" name=contactEmail id=contactEmail
                            placeholder="Your E-Mail Address" required>
                    </div>
                </div>

                <div class="form-group">
                    <label for=contactPhone class="col-sm-2 col-form-label">Phone Number</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name=contactPhone id=contactPhone
                            placeholder="Your Phone Number" required>
                    </div>
                </div>

                <figure class="text-center" style="margin: auto; padding: 2%;">
                    <button class="btn btn-primary" href="" type="submit">Add Contact</button>
                    <a class="btn btn-warning" value="cancel" href="/contactList" type="button">Cancel</a> 
                </figure>

            </form>



        </div>


    </main>

    <%- include ('../partials/footer.ejs') %>